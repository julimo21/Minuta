@page
@model Minuta.App.Frontend.Pages.AddModel6
@{
}
<h1>Agregar nuevo registro en la Minuta Correspondencia: @Model.MinutaCorrespondencia.id</h1>
<form method="post">
    <input type="hidden" asp-for = "MinutaCorrespondencia.id"/>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.fecha">FECHA DE INGRESO</label>
        <input asp-for="MinutaCorrespondencia.fecha" class="form-control" value="@Model.fecha" readonly="readonly">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.fecha"></span>-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.hora">HORA DE INGRESO</label>
        <input asp-for="MinutaCorrespondencia.hora" class="form-control"  value="@Model.hora" readonly="readonly">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.hora"></span>-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.asunto">ASUNTO</label>
        <input asp-for="MinutaCorrespondencia.asunto" class="form-control">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.asunto"></span>-->
    </div>
    <div class="form-group">
        <!--<label asp-for="MinutaCorrespondencia.residente.cedula">VISITANTE</label>-->
        <label for="">RESIDENTE</label><br>
        <!--<p>RESIDENTE</p>-->
        <select asp-for="cedulaResidente">
            @foreach (var residente in @Model.Residentes)
            {
                <option>@residente.cedula</option>
            }
        </select>
        <!--<input asp-for="MinutaCorrespondencia.residente.cedula" class="form-control">-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.tipoCorrespondencia">TIPO CORRESPONDENCIA</label>
        <input asp-for="MinutaCorrespondencia.tipoCorrespondencia" class="form-control">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.tipoCorrespondencia"></span>-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.personaEntrega">PERSONA ENTREGA</label>
        <input asp-for="MinutaCorrespondencia.personaEntrega" class="form-control">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.personaEntrega"></span>-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.personaRecibe">PERSONA RECIBE</label>
        <input asp-for="MinutaCorrespondencia.personaRecibe" class="form-control">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.personaRecibe"></span>-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.firmaRecibido">FIRMA RECIBIDO</label>
        <input asp-for="MinutaCorrespondencia.firmaRecibido" class="form-control">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.firmaRecibido"></span>-->
    </div>
    <div class="form-group">
        <label asp-for="MinutaCorrespondencia.observaciones">OBSERVACIONES</label>
        <input asp-for="MinutaCorrespondencia.observaciones" class="form-control">
        <!--<span class="text-danger" asp-validation-for="MinutaCorrespondencia.observaciones"></span>-->
    </div><br>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form><br>
<a asp-page="./List" class="btn-default">Minuta Correspondencia</a>