@page
@model Minuta.App.Frontend.Pages.AddModel1
@{
}
<h1>Agregar Nuevo Visitante: @Model.Visitante.cedula</h1>
<form method="post">
    <input type="hidden" asp-for = "Visitante.id"/>
    <div class="form-group">
        <label asp-for="Visitante.nombre">NOMBRE</label>
        <input asp-for="Visitante.nombre" class="form-control" width="20px">
        <span class="text-danger" asp-validation-for="Visitante.nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Visitante.apellidos">APELLIDOS</label>
        <input asp-for="Visitante.apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Visitante.apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Visitante.cedula">CÉDULA</label>
        <input asp-for="Visitante.cedula" class="form-control">
        <span class="text-danger" asp-validation-for="Visitante.cedula"></span>
    </div>
    <div class="form-group">
        <label asp-for="Visitante.numApartamentoVis">NÚMERO DE APARTAMENTO</label>
        <input asp-for="Visitante.numApartamentoVis" class="form-control">
        <span class="text-danger" asp-validation-for="Visitante.numApartamentoVis"></span>
    </div><br>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form><br>
<a asp-page="./List" class="btn-default"> Lista de Visitantes</a>